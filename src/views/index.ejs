<%- include('includes/head')%>
<%- include('includes/nav')%>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3 ">
        <h1 class="display-3 text-center">Agenda</h1>
        <p class="text-center lead">Seus contatos estão abaixo.</p>

        <%- include('includes/messages');%>
        <%if(contatos.length > 0) {%>
        <div class="responsive-table table-bordered card text-dark bg-transparent">
          <table class="table my-3">
            <tr>
              <th><i class="fa-solid fa-address-card mr-1"></i>Nome</th>
              <th><i class="fa-regular fa-address-card mr-1"></i>Sobrenome</th>
              <th><i class="fa-solid fa-phone mr-1"></i>Telefone</th>
              <th><i class="fa-solid fa-envelope mr-1"></i>Email</th>
              <th></th>
              <th></th>
            </tr>
            <%contatos.forEach (contato => {%>
            <tr>
              <td><%=contato.nome%></td>
              <td><%=contato.sobrenome%></td>
              <td><%=contato.telefone%></td>
              <td><%=contato.email%></td>
              <td><a href="/contato/index/<%=contato._id%>"><i class="fa-solid fa-pen mr-1"></i>Editar</a></td>
              <td><a class="text-danger" href="/contato/delete/<%=contato._id%>"><i class="fa-solid fa-trash mr-1"></i>Excluir</a></td>
            </tr>
            <%});%>
          </table>
        </div>
        <%} else {%>
        
          <p class="text-center">Você não tem nenhum contato cadastrado.</p>
        <% } %>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
<%- include('includes/footer')%>
  