<%- include('includes/head')%>
<%- include('includes/nav')%>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3 ">
        <h1 class="display-3 text-center">Contato</h1>
        <p class="text-center lead">Crie ou edite seu contato abaixo</p>

        <%- include('includes/messages');%>
        <div class="col-lg card bg-light mr-3 py-3">
          <% if (contato._id) {%>
          <form class="form-contato" action="/contato/edit/<%= contato._id%>" method="POST">
          <%} else {%>
          <form class="form-contato" action="/contato/register" method="POST">
          <%}%>  
            <input type="hidden" name="_csrf" value=<%=csrfToken %>>
            <div class="form-group">
              <label>Nome</label><br>
              <span class="span" id="span1">*nome é um campo obrigatorio</span>
              <input value="<%= contato.nome%>" type="text" class="form-control" name="nome" placeholder="Seu nome">
            </div>
            <div class="form-group">
              <label>Sobrenome</label>
              <input value="<%= contato.sobrenome%>" type="text" class="form-control" name="sobrenome" placeholder="Seu sobrenome">
            </div>
            <div class="form-group">
              <label>Email</label><br>
              <span class="span" id="span3">*é necessário que um dos campos seja preenchido(email válido ou telefone)</span><br class="span">
              <input value="<%= contato.email%>" type="email" class="form-control" name="email" placeholder="Seu email">
            </div>
            <div class="form-group">
              <label>Telefone</label><br>
              <span class="span" id="span4">*é necessário que um dos campos seja preenchido(email válido ou telefone)</span>
              <input  value="<%= contato.telefone%>"type="tel" class="form-control" name="telefone" placeholder="Seu telefone">
            </div>
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk mr-1"></i></i>Salvar</button>
          </form>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
<%- include('includes/footer')%>
  